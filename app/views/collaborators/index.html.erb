<h1 class="text-center">Add Collaborators to Wiki</h1>
<table class="table table-striped">
  <tr>
    <th>Username</td>
    <th>Email</td>
    <th>Grant Access</td>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.uname %></td>
      <td><%= user.email %></td>
      <td><input type="checkbox" data-toggle="toggle" data-on="Allow" data-off="Deny" data-onstyle="success" data-offstyle="danger" data-size="mini"></td>
    </tr>
  <% end %>
</table>
<div class="text-center">
  <%= button_to 'Save wiki', collaborators_path, class: "btn btn-default" %>
</div>

<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
