<h2>Sign up</h2>
<div class="form-horizontal">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :user_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :uname, class: 'form-control', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :full_name, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :email, class: 'form-control', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.email_field :email, class: 'form-control', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4 control-label">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <div class="col-sm-6">
      <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :membership_plan, class: "col-sm-4 control-label" %>
      <div class="col-sm-6 btn-group">
        <%= link_to 'Standard: Free', users_role_path, method: :put, controller: UsersController, action: :role, class: ApplicationHelper::active_role('standard') %>
        <%= link_to 'Premium: $10.00', users_role_path, method: :put, controller: UsersController, action: :role, class: ApplicationHelper::active_role('premium') %>
      </div>
    </div>
    <div class="col-sm-4"></div>
    <div class="form-group col-sm-4">
      <% if @user.role == 'standard' %>
        <%= f.submit "Sign up", class: 'btn btn-success' %>
      <% elsif @user.role == 'premium' %>
        <%= f.submit "Pay $10.00", new_charge_path, method: :get, class: 'btn btn-success' %>
      <% end %>
  <% end %>

  <%= render "devise/shared/links" %>
    </div>
</div>

<%= "Remove after testing: #{@user.role}" %>
